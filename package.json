{
  "name": "healthcare-chat-ui-kit",
  "version": "0.1.0",
  "private": true,
  "packageManager": "yarn@4.9.1",
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=4.9.1"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "yarn workspace @healthcare-chat/design-tokens run build && yarn workspace @healthcare-chat/core run build && yarn workspace @healthcare-chat/ui run build && yarn workspace @healthcare-chat/registry run build && yarn workspace @healthcare-chat/cli run build",
    "dev": "yarn workspaces foreach --all -p run dev",
    "lint": "yarn workspaces foreach --all -p run lint",
    "test": "yarn workspaces foreach --all -p run test"
  },
  "devDependencies": {
    "@eslint/css": "^0.8.1",
    "@eslint/js": "^9.27.0",
    "@eslint/json": "^0.12.0",
    "eslint": "^9.27.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.7",
    "esprima": "^4.0.1",
    "postcss": "^8.5.3",
    "react": "^19.1.0",
    "supports-color": "^8.1.1",
    "tailwindcss": "^4.1.7"
  }
}
